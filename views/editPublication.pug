html
    head
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css")
    style.
      body {
        background: #007bff;
        background: linear-gradient(to right, #0062E6, #33AEFF);
      }
      a{
        text-decoration: none;
        color: #fff;
        width: 100%;
      }   
      .card-body{
        display: flex;
        flex-direction: column;
        align-content: center;
      }  
      .card-body .form-group{
        margin-bottom: 10px;
      }
      #back{
        color: #000;
      }
    body
        div(class="container")
            div(class="row")
                div(class="col-sm-9 col-md-7 col-lg-5 mx-auto")
                    div(class="card border-0 shadow rounded-3 my-5")
                        div(class="card-body p-4 p-sm-5")
                            a(href='/publications/getAllPublications' id="back") Back
                            h2(class="card-title text-center mb-5 fw-light fs-1") Editar Publicación
                            form(role='form' method='POST' action='http://localhost:3000/publications/editPublication')
                                input(type="hidden", name="idPublication", id="idPublication", value=id) 
                                div(class="form-group")
                                    label(for="name") Nombre
                                    input(type="text" class="form-control" name="name" id="name" value=name)
                                div(class="form-group")
                                    label(for="description") Descripción
                                    input(type="text" class="form-control" name="description" id="description" value=description)
                                div(class="form-group")
                                    label(for="iduser") Usuario
                                    select(class="form-select" name="iduser" id="iduser")
                                      each val in listUser
                                        if val[0] == iduser
                                          option(selected value=val[0])= val[2]
                                        else 
                                          option(value=val[0])= val[2]
                                div(class="form-group")
                                    label(for="idcategory") Categoría
                                    select(class="form-select" name="idcategory" id="idcategory")
                                      each val in listCategories
                                        if val[0] == idcategory
                                          option(selected value=val[0])= val[1]
                                        else 
                                          option(value=val[0])= val[1]
                                div(class="form-group")
                                    label(for="idcategory") Imagen del Banner
                                    input(type="text" class="form-control" name="bannerimage" id="bannerimage" value=bannerimage)
                                br
                                input(class="btn btn-primary" type="submit")
    script(src='/static/js/editarAnalista.js')