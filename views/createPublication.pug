html
    head
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css")
    style.
      body {
        background: #007bff;
        background: linear-gradient(to right, #0062E6, #33AEFF);
      }
      a{
        text-decoration: none;
        color: #fff;
        width: 100%;
      }   
      .card-body{
        display: flex;
        flex-direction: column;
        align-content: center;
      }  
      .card-body .form-group{
        margin-bottom: 10px;
      }
      #back{
        color: #000;
      }
    body
        div(class="container")
            div(class="row")
                div(class="col-sm-9 col-md-7 col-lg-5 mx-auto")
                    div(class="card border-0 shadow rounded-3 my-5")
                        div(class="card-body p-4 p-sm-5")
                            a(href='/' id="back") Home
                            h2(class="card-title text-center mb-5 fw-light fs-1") Crear Publicación
                            form(role='form' method='POST' action='http://localhost:3000/publications/createPublication')
                                div(class="form-group")
                                    label(for="name") Nombre
                                    input(type="text" class="form-control" name="name" id="name" placeholder="Nombre")
                                div(class="form-group")
                                    label(for="description") Descripción
                                    input(type="text" class="form-control" name="description" id="description" placeholder="Descripción")
                                div(class="form-group")
                                    label(for="iduser") Usuario
                                    input(type="text" class="form-control" name="iduser" id="iduser" placeholder="Usuario")
                                div(class="form-group")
                                    label(for="idcategory") Categoría
                                    input(type="text" class="form-control" name="idcategory" id="idcategory" placeholder="Categoría")
                                div(class="form-group")
                                    label(for="idcategory") Imagen del Banner
                                    input(type="text" class="form-control" name="bannerimage" id="bannerimage" placeholder="Imagen del Banner")
                                br
                                input(class="btn btn-primary" type="submit")